<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0CDEA"
        android:padding="10dp"
        >


        <TextView
            android:id="@+id/specialFoodName"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Burger"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"

            >

        </TextView>

        <ImageView
            android:id="@+id/special_FoodImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/specialFoodName"
            android:layout_centerHorizontal="true"
            android:src="@drawable/kfc6">

        </ImageView>


        <TextView
            android:id="@+id/specialFoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/special_FoodImage"
            android:layout_marginLeft="10dp"
            android:text="LKR 800.00"
            android:layout_centerHorizontal="true"
            android:textColor="#D50E74"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"

            >

        </TextView>

        <Button
            android:id="@+id/specialButtonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/specialFoodPrice"
            android:backgroundTint="@color/purple_500"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:text="ADD" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>