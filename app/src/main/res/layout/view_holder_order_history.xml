<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >

        <ImageView
            android:id="@+id/orderRestImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/dinemore"></ImageView>


        <TextView
            android:id="@+id/orderRestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/orderRestImage"
            android:layout_toRightOf="@id/orderRestImage"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="Dinemore - Wellewatta"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/order_TotalBucket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderRestName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/orderRestImage"
            android:text="3 items"
            android:textSize="20sp"

            >

        </TextView>

        <TextView
            android:id="@+id/orderTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_TotalBucket"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/orderRestImage"
            android:text="LKR 1353.00"
            android:textSize="20sp"
            android:textStyle="bold"
            >

        </TextView>


    <TextView
        android:id="@+id/order_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderTotalPrice"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/orderRestImage"
        android:text="2022.09.26"
        android:textSize="15sp"
        android:textColor="#0088FF"
        android:textStyle="bold"

        ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_Date"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/orderRestImage"
            android:text="Completed"
            android:textSize="15sp"
            android:textColor="#E53935"
            android:textStyle="bold"

            ></TextView>



    </RelativeLayout>

</androidx.cardview.widget.CardView>