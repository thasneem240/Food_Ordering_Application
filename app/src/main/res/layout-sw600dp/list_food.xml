<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:background="@color/teal_200"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#81EFBA"
        android:padding="10dp"
        >


        <ImageView
            android:id="@+id/imageOfFood"
            android:layout_width="330dp"
            android:layout_height="330dp"
            app:srcCompat="@drawable/kfc1" />


        <TextView
            android:id="@+id/foodName"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
           android:layout_marginTop="15dp"
            android:text="@string/kfc_buriyani_regular"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imageOfFood"
            android:layout_marginLeft="5dp"

            />

        <TextView
            android:id="@+id/foodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:layout_marginTop="2dp"
            android:text="@string/lkr_470_00"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@id/foodName"
            android:layout_toRightOf="@id/imageOfFood"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+Add"
            android:textColor="#FFAB00"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/black"
            android:layout_below="@id/foodPrice"
            android:layout_toRightOf="@id/imageOfFood"
            android:layout_marginLeft="5dp"

            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>